                    setTimeout(function () {
                        location.href = '@Url.Action("DisplayToastSuccess_withIndex", "AccountBank_CAS")';
                    }, 500); // التأخير لمدة .5 ثوانٍ
                }
            }, 500);
        }

    </script>
