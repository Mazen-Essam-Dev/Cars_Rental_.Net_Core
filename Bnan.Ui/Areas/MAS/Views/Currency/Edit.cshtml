@using Bnan.Core.Extensions
@model CurrencyVVM
@inject IViewLocalizer localizer
@inject IOptions<RequestLocalizationOptions> options
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    ViewData["returnUrl"] = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
    ViewData["Page-title"] = @localizer["View_Currency_PageTitle"];
    ViewData["Page-Hint"] = @localizer["LessorClassification Hint"];
}
<link href="~/css/toastr.css" rel="stylesheet" />


<div class="col my-2 d-flex align-items-center justify-content-center">
    <div class="container NewUpdate-container">
        <form asp-area="MAS" asp-controller="Currency" asp-action="Edit" method="post" class="needs-validation" novalidate>
            <div class="row mt-3 g-3">

                <div class="row justify-content-center">
                    <div class="col-lg-9">
                        <div class="row g-3 my-2">
                            <div class="col">
                                <h3>@localizer["the_Currency"]</h3>
                            </div>
                            <div class="col-md-auto save-col">
                                <button type="submit" class="custom-img-btn"> <img src="~/MasSystem/images/save.svg" /></button>
                            </div>
                        </div>
                        <main class="mt-3 g-3">
                            <div class="accordion inputs-accordion">
                                <div class=" inputs-accordion-item">
                                    <div class=" inputs-accordion-item-header">
                                        <span class="accordion-item-header-title">
                                            <i class="fa-solid fa-check data-check"></i>@localizer["the_RealNumber"]
                                        </span>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"
                                             viewBox="0 0 24 24" fill="none" stroke="#666666"
                                             stroke-width="3" stroke-linecap="round"
                                             stroke-linejoin="round"
                                             class="lucide lucide-chevron-down accordion-item-header-icon">
                                            <path d="m6 9 6 6 6-6" />
                                        </svg>
                                    </div>
                                    <div class="accordion-item-description-wrapper">
                                        <div class="accordion-item-description">
                                            <hr class="accordion-items-hr">
                                            <div class="container-fluid ">
                                                <div class="row g-2 justify-content-around">
                                                    @for(int i=0 ; i<Model.Cuurency_full.Count; i++ ){
                                                        <input asp-for="@Model.Cuurency_full[i].CrMasSysConvertNoToTextCode" hidden />
                                                        <div class="col-md-12">
                                                        <div class="row g-2 justify-content-around">
                                                            <div class="col-auto">
                                                                    <div class="currencyDiv">
                                                                        <p>@Model.Cuurency_full[i].CrMasSysConvertNoToTextCode</p>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-5">
                                                                <input type="text" 
                                                                       class="form-control inputs arabic-input"
                                                                           maxlength="30" asp-for="@Model.Cuurency_full[i].CrMasSysConvertNoToTextArName" id="Cuurency_full_+@i+__CrMasSysConvertNoToTextArName" oninput="this.value=this.value.replace(/[^\u0600-\u06FF\ufb50-\ufdff\ufe70-\ufeff\s]/g, '')" autoComplete="off" required>
                                                                <div class="invaild">
                                                                    <div class="invalid-feedback">
                                                                            @*<span class="text-danger" data-valmsg-for="Cuurency_full_+@i+__CrMasSysConvertNoToTextArName" data-valmsg-replace="true"></span>*@
                                                                            <span asp-validation-for="@Model.Cuurency_full[i].CrMasSysConvertNoToTextArName" class="text-danger"></span>
                                                                            @*<span data-valmsg-for="Cuurency_full_i__.CrMasSysConvertNoToTextArName" class="text-danger"></span>*@
                                                                            @*<span class="text-danger" id="Description2'@Model.Cuurency_full[i].CrMasSysConvertNoToTextArName'-Error"></span>*@
                                                                            @*@Html.ValidationMessage(@Model.Cuurency_full[i].CrMasSysConvertNoToTextArName, null, new { @class = "text-danger" })*@
                                                                        </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-5">
                                                                <input type="text" 
                                                                       class="form-control inputs  english-input"
                                                                        maxlength="30" asp-for="@Model.Cuurency_full[i].CrMasSysConvertNoToTextEnName" oninput="this.value = this.value.replace(/[^a-zA-Z ]/g, '')" autoComplete="off" required>
                                                                <div class="invaild">
                                                                    <div class="invalid-feedback">
                                                                            <span asp-validation-for="@Model.Cuurency_full[i].CrMasSysConvertNoToTextEnName" class="text-danger"></span>
                                                                            <span class="text-danger" id="Description2'@Model.Cuurency_full[i].CrMasSysConvertNoToTextEnName'-Error"></span>
                                                                        </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="inputs-accordion-item">
                                    <div class="inputs-accordion-item-header">
                                        <span class="accordion-item-header-title">
                                            <i class="fa-solid fa-check data-check"></i> @localizer["the_RatioNumber"]
                                        </span>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"
                                             viewBox="0 0 24 24" fill="none" stroke="#666666"
                                             stroke-width="3" stroke-linecap="round"
                                             stroke-linejoin="round"
                                             class="lucide lucide-chevron-down accordion-item-header-icon">
                                            <path d="m6 9 6 6 6-6" />
                                        </svg>
                                    </div>
                                    <div class="accordion-item-description-wrapper">
                                        <div class="accordion-item-description">
                                            <hr class="accordion-items-hr">
                                            <div class="container-fluid ">
                                                <div class="row g-2 justify-content-around">
                                                 
                                                    
                                                    @for (int i = 0; i < Model.Cuurency_ratio.Count; i++)
                                                    {
                                                        <input asp-for="@Model.Cuurency_ratio[i].CrMasSysConvertNoToTextCode" hidden />
                                                        <div class="col-md-12">
                                                            <div class="row g-2 justify-content-around">
                                                                <div class="col-auto">
                                                                    <div class="currencyDiv">
                                                                        <p>@Model.Cuurency_ratio[i].CrMasSysConvertNoToTextCode</p>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-5">
                                                                    <input type="text" 
                                                                           class="form-control inputs arabic-input"
                                                                           maxlength="30" asp-for="@Model.Cuurency_ratio[i].CrMasSysConvertNoToTextArName" oninput="this.value=this.value.replace(/[^\u0600-\u06FF\ufb50-\ufdff\ufe70-\ufeff\s]/g, '')" autoComplete="off" required>
                                                                    <div class="invaild">
                                                                        <div class="invalid-feedback">
                                                                            <span asp-validation-for="@Model.Cuurency_ratio[i].CrMasSysConvertNoToTextArName" class="text-danger"></span>
                                                                            <span class="text-danger" id="Description1'@Model.Cuurency_ratio[i].CrMasSysConvertNoToTextArName'-Error"></span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-5">
                                                                    <input type="text"
                                                                           class="form-control inputs  english-input"
                                                                           maxlength="30" asp-for="@Model.Cuurency_ratio[i].CrMasSysConvertNoToTextEnName" oninput="this.value = this.value.replace(/[^a-zA-Z ]/g, '')" autoComplete="off" required>
                                                                    <div class="invaild">
                                                                        <div class="invalid-feedback">
                                                                            <span asp-validation-for="@Model.Cuurency_ratio[i].CrMasSysConvertNoToTextEnName" class="text-danger"></span>
                                                                            <span class="text-danger" id="Description1'@Model.Cuurency_ratio[i].CrMasSysConvertNoToTextEnName'-Error"></span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }


                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </main>
                    </div>
                </div>
            </div>
        </form>
        <a href="~/MasSystemindex.html" data-bs-toggle="tooltip" data-bs-placement="top"
           data-bs-custom-class="custom-tooltip" data-bs-title="@localizer["BackToHome"]" class="new-Page-icon">
            <img src="~/MasSystem/images/back to main.svg" alt="man">
        </a>
    </div>
</div>



<!-- signature modal -->
<div class="modal fade" id="signature-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered d-flex justify-content-center">
        <div class="modal-content signature-modal-content p-3">
            <div class="modal-body Signature-modal-body">
                <div class="SignatureCard">
                    <div class="image-main-container" id="removeSignatureImg"></div>
                    <div class="upload-container">
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-3">
                        <div class="sinature-Btn-Card p-2">
                            <img src="~/MasSystem/images/signature/save.svg" class="w-100" id="save">
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="sinature-Btn-Card p-2">
                            <img src="~/MasSystem/images/signature/Frame.svg" class="w-100" id="clear">
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="sinature-Btn-Card p-2">
                            <img src="~/MasSystem/images/signature/file-signature_9795523 1.svg"
                                 class="w-100" id="WriteSignature">
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="sinature-Btn-Card p-2">
                            <img src="~/MasSystem/images/signature/Pic.svg" class="w-100"
                                 id="UploadSigntaurePic">
                            <input type="file" id="imageUpload" accept="image/*"
                                   style="display: none;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


                        
@section Scripts {
    <script src="~/js/toastr.js"></script>

    <script>
        function validateNumberInput(input) {
            input.value = input.value.replace(/\D/g, ''); // استبدال كل الأحرف غير الرقمية
        }
    </script>
    <script>
        $(document).ready(function () {

            // This To Focus On input when page load
            if ('@requestCulture?.RequestCulture.UICulture.Name' == "en-US") {
                $("#CrMasSupAccountPaymentMethodEnName").focus();
            }
            else {
                $("#CrMasSupAccountPaymentMethodArName").focus();
            }
        }
    </script>

        }